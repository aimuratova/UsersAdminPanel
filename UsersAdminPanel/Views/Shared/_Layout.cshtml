<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UsersAdminPanel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UsersAdminPanel.styles.css" asp-append-version="true" />   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">UsersAdminPanel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>                        
                    </ul>
                    <ul class="navbar-nav">
                       
                            <li class="nav-item dropdown" id="authMenu" style="display:none">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">                                    
                                    <li>
                                        <div asp-controller="Account" asp-action="Logout" class="m-0 px-3 py-1" id="logoutBtn">
                                            <button type="submit" class="btn btn-link dropdown-item">Logout</button>
                                        </div>
                                    </li>
                                </ul>
                            </li>

                        <li class="nav-item nonAuthMenuClass">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item nonAuthMenuClass">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - UsersAdminPanel - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function () {
            // Пример использования JWT для запроса
            const token = localStorage.getItem('jwtToken');
            if (token) {
                $.ajax({
                    url: '/Users/GetUser',
                    type: 'GET',
                    headers: {
                        'Authorization': 'Bearer ' + token
                    },
                    success: function (data) {
                        if(data.success) {
                            // Пользователь авторизован, можно отобразить его данные
                            $(".nonAuthMenuClass").hide();
                            $("#authMenu").show();
                            $('#userMenu').html(data.user.email);
                        } 
                        else {
                            // Токен недействителен или пользователь не найден
                            $('#errorLabel').text(data.message).show();
                            localStorage.removeItem('jwtToken');
                            window.location.href = '/Home/Index';
						}
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.error('Error:', textStatus, errorThrown);
                        $('#errorLabel').text(jqXHR.responseText).show();
                        $("#authMenu").hide();
                        $(".nonAuthMenuClass").show();
                    }
                });
            }

            $('#logoutBtn').click(function () {
                $.ajax({
                    url: '/Account/Logout',
                    type: 'POST',
                    headers: {
                        'Authorization': 'Bearer ' + token
                    },
                    contentType: 'application/json',                    
                    success: function () {
                        localStorage.removeItem('jwtToken');
                        window.location.href = '/Home/Index';
                    },
                    error: function () {
                    }
                });
            });
        });
    </script>
</body>
</html>
